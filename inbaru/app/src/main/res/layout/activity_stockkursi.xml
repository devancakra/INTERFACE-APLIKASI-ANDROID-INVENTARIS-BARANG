<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stockkursi"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00BCD4"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/panah" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-40dp"
            android:text="STOCK MEJA DAN KURSI"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kotak"
        android:layout_width="315dp"
        android:layout_height="320dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/kotakdetail">
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/circle"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="170dp"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/kursi"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="185dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="JENIS"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="320dp"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="321dp"
        android:background="@drawable/edittextdetail" />
    <Spinner
        android:id="@+id/pilihmejakursi"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="321dp"
        android:entries="@array/jenis"
        android:padding="20dp" />
    <Button
        android:id="@+id/btnmejakursi"
        android:layout_width="125dp"
        android:layout_height="20dp"
        android:background="@drawable/edittextdetail"
        android:text="--PILIH--"
        android:textSize="15dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="321dp"/>
    <EditText
        android:id="@+id/editbaru"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:background="@drawable/edittextdetail"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="361dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="BARU"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="360dp"/>
    <ImageView
        android:id="@+id/editlama"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:background="@drawable/edittextdetail"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="401dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="LAMA"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"/>
    <ImageView
        android:id="@+id/edittotal"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:background="@drawable/edittextdetail"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="441dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="TOTAL"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="440dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="TANGGAL"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="480dp"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:background="@drawable/edittextdetail"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="481dp"/>
    <Spinner
        android:id="@+id/pilihdate"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:entries="@array/date"
        android:padding="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="481dp"/>
    <Button
        android:id="@+id/btndate"
        android:layout_width="125dp"
        android:layout_height="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="481dp"
        android:background="@drawable/edittextdetail"
        android:text="DD/MM/YYYY"
        android:textSize="15dp" />
    <ImageView
        android:layout_width="1100dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="620dp"
        android:background="#00BCD4"/>
    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/simpan"
        android:text="SIMPAN"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="535dp"/>
    <ImageView
        android:id="@+id/kliktambah"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="625dp"
        android:src="@drawable/tambah" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="655dp"
        android:text="TAMBAH STOCK"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="10dp" />
    <ImageView
        android:id="@+id/klikkurang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="625dp"
        android:src="@drawable/kurang" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="655dp"
        android:text="KURANG STOCK"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="10dp" />
    <ImageView
        android:id="@+id/klikberanda"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="625dp"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="655dp"
        android:text="BERANDA"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="10dp" />
</RelativeLayout>